                            android:layout_marginTop="10dp"
                            tools:text="风力" />

                        <TextView
                            android:id="@+id/tv_fengxiang_forecast3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            tools:text="风向" />

                        <TextView
                            android:id="@+id/tv_high_forecast3"
